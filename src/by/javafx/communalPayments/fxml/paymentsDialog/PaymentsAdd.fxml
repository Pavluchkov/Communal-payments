<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="260.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8">
    <children>
        <HBox alignment="CENTER" layoutY="6.0" prefHeight="40.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="Параметры платежа">
                    <font>
                        <Font name="Arial Bold Italic" size="18.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutY="60.0" prefHeight="30.0" prefWidth="477.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
            <children>
                <Label prefHeight="30.0" prefWidth="155.0" text="Объект учета">
                    <font>
                        <Font name="Arial Italic" size="14.0"/>
                    </font>
                </Label>
                <ComboBox fx:id="objectCombo" prefHeight="30.0" prefWidth="215.0"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="4.0" layoutY="90.0" prefHeight="30.0" prefWidth="477.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
            <children>
                <Label prefHeight="30.0" prefWidth="155.0" text="Услуга">
                    <font>
                        <Font name="Arial Italic" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="serviceCombo" prefHeight="30.0" prefWidth="215.0"/>
            </children>
        </HBox>
        <HBox fx:id="layout_1" alignment="CENTER_RIGHT" layoutX="12.0" layoutY="233.0" prefHeight="30.0"
              prefWidth="521.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="200.0">
            <children>
                <Button fx:id="btnOk" mnemonicParsing="false" onAction="#btnOkClicked" prefHeight="30.0"
                        prefWidth="110.0" text="Оплатить">
                    <font>
                        <Font name="Arial" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="btnCancel" layoutX="180.0" layoutY="17.0" mnemonicParsing="false"
                        onAction="#btnCancelClicked" prefHeight="30.0" prefWidth="110.0" text="Отмена">
                    <HBox.margin>
                        <Insets left="30.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="Arial" size="14.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="138.0" prefHeight="30.0" prefWidth="477.0"
              AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="140.0">
            <children>
                <Label prefHeight="30.0" prefWidth="155.0" text="Начислено">
                    <font>
                        <Font name="Arial Italic" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="sumField" prefHeight="30.0" prefWidth="215.0">
                    <font>
                        <Font name="Arial" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox fx:id="layout_2" alignment="CENTER_RIGHT" layoutX="-36.0" layoutY="165.0" prefHeight="30.0"
              prefWidth="477.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="200.0">
            <children>
                <Button fx:id="btnMeasure" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#inputMeasureClicked" prefHeight="30.0" prefWidth="223.0"
                        text="Внести показания счетчиков">
                    <font>
                        <Font name="Arial Italic" size="14.0"/>
                    </font>
                </Button>
                <Button fx:id="btnCancelMeasure" mnemonicParsing="false" onAction="#btnCancelClicked" prefHeight="30.0"
                        prefWidth="110.0" text="Отмена">
                    <font>
                        <Font name="Arial" size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="30.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>
